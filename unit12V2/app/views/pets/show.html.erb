<% if admin_signed_in? %>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @pet.name %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= @pet.age %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @pet.description %>
  </p>

  <p>
    <strong>Type:</strong>
    <%= @pet.pet_type %>
  </p>

  <p>
    <strong>Picture:</strong>
    <td><%= image_tag(@pet.picture, :class => "pet_image") %></td>
  </p>


  <%= link_to 'Edit', edit_pet_path(@pet) %> |
  <%= link_to 'Back', pets_path %>
<% else %>
  <h2>You must be logged in as an admin to view this page.<h2>
  <%= link_to 'To Home', root_url %>
<% end %>
