<div id="main">
  <h1>Pets for Adoption</h1>

  <%= link_to "View Pets", pets_path %>
  <br>
  <br>

  <table>
    <thead>
      <tr id="header_row">
        <th>Pet Type</th>
        <th>Name</th>
        <th>Age</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>

    <tbody id="pet_list">
      <% @pets.each do |pet| %>
        <%= render pet %>
      <% end %>
    </tbody>
  </table>


<br>

</div>
