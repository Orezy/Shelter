<h1>Listing Pets</h1>

<table>
  <thead>
    <tr id="header_row">
      <th>Name</th>
      <th>Age</th>
      <th>Description</th>
      <th>Pet Type</th>
      <% if current_user.try(:admin?) %>  
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr class="pet_row">
        <td><%= pet.name %></td>
        <td><%= pet.age %></td>
        <td><%= pet.description %></td>
        <td><%= pet.pet_type %></td>
        <td><%= image_tag(pet.picture, class: 'pet_image') %></td>
        <% if current_user.try(:admin?) %>
          <td><%= link_to 'Show', pet %></td>
          <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
          <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

